<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.financex.financex_ledger.RegistrationFormController"
          alignment="CENTER" hgap="10" vgap="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="nameField" promptText="Enter your name" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="emailField" promptText="Enter your email" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Password:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <PasswordField fx:id="passwordField" promptText="Enter your password" GridPane.rowIndex="2"
                   GridPane.columnIndex="1"/>

    <Label text="Confirm Password:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <PasswordField fx:id="confirmPasswordField" promptText="Confirm your password" GridPane.rowIndex="3"
                   GridPane.columnIndex="1"/>

    <Button text="Register" onAction="#registerUser" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
</GridPane>
